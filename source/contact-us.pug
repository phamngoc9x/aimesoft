extends layout/_default

block head
  +head('Aimesoft - Contact us')

block main
  +heroCarousel
  .aime-contact
    .aime-container-mini
      h2.aime-title Contact us
    .aime-container-mini
      .row.w-sm-100
        .col-md-5
          ul.info-list
            li.info-list__item
              .info-list__icon
                img.icon-pin(src='images/icon-pin.png', alt='icon')
              .info-list__text Tầng 3, toà nhà Hoàng Ngọc, số 4 ngõ 82 phố Dịch Vọng Hậu, Cầu Giấy, Hà Nội
            li.info-list__item
              .info-list__icon
                img.icon-telephone(src='images/icon-telephone.png', alt='icon')
              a(href='tel:0985387426').info-list__text 098-538-7426
            li.info-list__item
              .info-list__icon
                img.icon-mail(src='images/icon-mail.png', alt='icon')
              a.info-list__text(href='mailto:info@aimesoft.com').info-list__text info@aimesoft.com
        .col-md-1
        .col-md-5
          form.contact-form(action='contact-us.html')
            input(type='text' placeholder='Your email').contact-form__control
            input(type='text' placeholder='Your name').contact-form__control
            textarea(placeholder='Your message').contact-form__control
            +buttons({
              btnType:'blue',
              btnSize:'large',
              text:'SEND US'
            }).contact-form__button
  .aime-contact-map.position-relative
    img.bg-br.d-none.d-lg-block(src='images/bg-c-07.png', alt='cover')
    iframe(width="100%" height="400" src="https://maps.google.com/maps?width=100%&height=600&hl=en&q=to%C3%A0%20nh%C3%A0%20Ho%C3%A0ng%20Ng%E1%BB%8Dc%2C%20s%E1%BB%91%204%20ng%C3%B5%2082%20ph%E1%BB%91%20D%E1%BB%8Bch%20V%E1%BB%8Dng%20H%E1%BA%ADu%2C%20C%E1%BA%A7u%20Gi%E1%BA%A5y%2C%20H%C3%A0%20N%E1%BB%99i+(Your%20Business%20Name)&ie=UTF8&t=&z=18&iwloc=B&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0")
      a(href="https://www.mapsdirections.info/en/measure-map-radius/") Radius distance map
